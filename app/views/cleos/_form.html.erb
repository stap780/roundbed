  <div class="form-inputs">
    <%= f.input :sku %>
    <%= f.input :title %>
    <%= f.input :sdesc %>
    <%= f.input :desc %>
    <%= f.input :cprice %>
    <%= f.input :price %>
    <%= f.input :qt %>
    <%= f.input :image %>
    <%= f.input :barcode %>
    <%= f.input :dizain %>
    <%= f.input :cvet %>
    <%= f.input :tema %>
    <%= f.input :okras %>
    <%= f.input :otdelka %>
    <%= f.input :zast %>
    <%= f.input :kvopred %>
    <%= f.input :tkan %>
    <%= f.input :plotnost %>
    <%= f.input :sostav %>
    <%= f.input :obrazmer %>
    <%= f.input :pr_razmer %>
    <%= f.input :obem %>
    <%= f.input :ves %>
    <%= f.input :razmer_upak %>
    <%= f.input :vid_upak %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
