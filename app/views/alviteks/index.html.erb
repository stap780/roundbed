<div class="row">
<div class="col-2">
	<h1>Alvitek</h1>
	<p>Всего <%=Alvitek.count%><br>(больше 0 - <%=Alvitek.where.not(:qt => '0' ).count%>)</p>
</div>
<div class="col-2 ">
	<%= form_tag import_alviteks_path, multipart: true do %>
	<%= file_field_tag :file , :class =>'import_file'%><%= submit_tag "Импорт", :class =>'btn btn-light' %>
	<% end %>
</div>
<div class="col-2 ">
<button  id="deleteAllitems_alvitek" class="btn btn-light" style="display: none;">Удалить <i class="fa fa-trash" aria-hidden="true"></i></button>
</div>
<div class="col-2 "><%= link_to 'Создать файл insales', insales_alviteks_path , class: 'btn btn-light'%>
	<% file_ins = "#{Rails.public_path}"+'/insales_alvitek.csv'%>
	<% check = File.file?(file_ins)%>
	<% if check.present? %>
	<p>Файл создан - <%=File.ctime(file_ins).in_time_zone.strftime("%d/%m/%Y %H:%M" ) %> <a href="http://68.183.166.25/insales_alvitek.csv">Скачать</a></p>
	<% end %>
</div>

<div class="col-4">
	<%= search_form_for @search, {class: 'form-inline'} do |f|%>
		<%= f.search_field :sku_or_title_cont_any, placeholder: 'Артикул, название', class: "form-control input-sm" %>
		<%= f.submit 'Поиск', class: 'btn btn-success ml-2' %>
		<%= link_to 'Сбросить',alviteks_path, class: 'btn btn-light' %>
	<% end %>
</div>

</div>
<div class="table-responsive">
<table class="table table-hover table-condensed table-sm">
  <thead>
    <tr class="bg-light">
	  <th><%= check_box_tag 'selectAll', value = 'selectAll'%></th>
      <th>Aid</th>
      <th>Sku</th>
      <th>Title</th>
      <th>Desc</th>
      <th>Qt</th>
      <th>Price</th>
      <th>Mprice</th>
      <th>Image</th>
      <th>Cat</th>
      <th>Col</th>
      <th>Vendor</th>
      <th>Country</th>
      <th>Line</th>
      <th>Razmer</th>
      <th>Teplota</th>
      <th>Podderjka</th>
      <th>Razm nav</th>
      <th>Razm podod</th>
      <th>Razmer prostini</th>
      <th>Tip prostini</th>
      <th>Visota</th>
      <th>Napolnitel</th>
      <th>Napolnitel chehla</th>
      <th>Napolnitel yadra</th>
      <th>Ves napolnitel</th>
      <th>Ves nopolnitel chehla</th>
      <th>Ves napolnitel yadra</th>
      <th>Tkan</th>
      <th>Sostav tkan</th>
      <th>Tip zast</th>
      <th>Tip zast navol</th>
      <th>Tip zast podod</th>
      <th>Tip krepl</th>
      <th>Tip stejki</th>
      <th>Okantovka</th>
      <th>Upak</th>
      <th>Tip upak</th>
      <th>Kol upak</th>
      <th>Material</th>
      <th>Plotnost</th>
      <th>Barcode</th>
      <th>Cvet</th>
      <th>Tkan verh</th>
      <th>Tkan niz</th>
      <th>Sostav</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="alviteks_table">
    <% @alviteks.each do |alvitek| %>
      <tr>
	    <td><%=check_box_tag "alvitek_ids[]", alvitek.id, false, class: 'alvitek_ids' %></td>
        <td><%= alvitek.aid %></td>
        <td><%= link_to alvitek.sku, alvitek %></td>
        <td><%= alvitek.title %></td>
        <td><%= truncate(alvitek.desc, length: 30) %></td>
        <td><%= alvitek.qt %></td>
        <td><%= alvitek.price %></td>
        <td><%= alvitek.mprice %></td>
        <td><%= alvitek.image %></td>
        <td><%= alvitek.cat %></td>
        <td><%= alvitek.col %></td>
        <td><%= alvitek.vendor %></td>
        <td><%= alvitek.country %></td>
        <td><%= alvitek.line %></td>
        <td><%= alvitek.razmer %></td>
        <td><%= alvitek.teplota %></td>
        <td><%= alvitek.podderjka %></td>
        <td><%= alvitek.razm_nav %></td>
        <td><%= alvitek.razm_podod %></td>
        <td><%= alvitek.razmer_prostini %></td>
        <td><%= alvitek.tip_prostini %></td>
        <td><%= alvitek.visota %></td>
        <td><%= alvitek.napolnitel %></td>
        <td><%= alvitek.napolnitel_chehla %></td>
        <td><%= alvitek.napolnitel_yadra %></td>
        <td><%= alvitek.ves_napolnitel %></td>
        <td><%= alvitek.ves_nopolnitel_chehla %></td>
        <td><%= alvitek.ves_napolnitel_yadra %></td>
        <td><%= alvitek.tkan %></td>
        <td><%= alvitek.sostav_tkan %></td>
        <td><%= alvitek.tip_zast %></td>
        <td><%= alvitek.tip_zast_navol %></td>
        <td><%= alvitek.tip_zast_podod %></td>
        <td><%= alvitek.tip_krepl %></td>
        <td><%= alvitek.tip_stejki %></td>
        <td><%= alvitek.okantovka %></td>
        <td><%= alvitek.upak %></td>
        <td><%= alvitek.tip_upak %></td>
        <td><%= alvitek.kol_upak %></td>
        <td><%= alvitek.material %></td>
        <td><%= alvitek.plotnost %></td>
        <td><%= alvitek.barcode %></td>
        <td><%= alvitek.cvet %></td>
        <td><%= alvitek.tkan_verh %></td>
        <td><%= alvitek.tkan_niz %></td>
        <td><%= alvitek.sostav %></td>
        <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_alvitek_path(alvitek) %></td>
        <td><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, alvitek, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="apple_pagination">
	<%= will_paginate @alviteks %>
</div>


